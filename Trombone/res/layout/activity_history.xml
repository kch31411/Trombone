<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    android:orientation="vertical"
    tools:context=".HistoryActivity" >
    
    <Spinner
        android:id="@+id/spinner_history"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:background="#c8c1a4" />

    <RelativeLayout
        android:id="@+id/relative_chart_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <com.essence.chart.Chart
            android:id="@+id/history_score_chart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.essence.chart.Chart
            android:id="@+id/history_count_chart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/history_score_chart" />
    </RelativeLayout>

</LinearLayout>
